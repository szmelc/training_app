.container
  .row
    .col-sm-12
      %h3 Comment
      = simple_form_for [@post, @comment], class: 'form-horizontal' do |f|
        .col-sm-12
          = f.input :content, class: 'form-control', label: false
        .row
          .col-sm-12
            .pull-right
              = f.hidden_field :user_id, value: current_user.id
              = f.hidden_field :post_id, value: @post.id
              = f.submit "Post", class: 'btn btn-success'


