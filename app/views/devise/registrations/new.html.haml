.container
  .row
    .col-sm-12
      %h2 Register
      = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), class: 'form-horizontal', role: 'form') do |f|
        = devise_error_messages!
        .form-group.row
          = f.label :name, class: 'col-sm-2 control-label'
          .col-sm-5
            = f.input :name, :autofocus => true, class: 'form-control', label: false
        .form-group.row
          = f.label :email, class: 'col-sm-2 control-label'
          .col-sm-5
            = f.input :email, :autofocus => true, class: 'form-control', label: false
        .form-group.row
          = f.label :password, class: 'col-sm-2 control-label'
          .col-sm-5
            = f.input :password, class: 'form-control', label: false
        .form-group.row
          = f.label :password_confirmation,'Re-enter Password', class: 'col-sm-2 control-label', label: false
          .col-sm-5
            = f.input :password_confirmation, class: 'form-control', label: false
        .row
          .col-sm-7
            .pull-right
              = f.submit "Register", class: 'btn btn-success'
    = render "devise/shared/links"


