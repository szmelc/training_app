%nav.navbar.navbar-default
  .container
    .navbar-header
      %button{ :type => 'button', :class => 'navbar-toggle collapsed', :data => { :toggle => 'collapse', :target => '#bs-example-navbar-collapse-1'  } }
        %span.sr-only Toggle navigation
      = link_to "TrainingApp", root_path, class: "navbar-brand"
    .div.collapse.navbar-collapse#bs-example-navbar-collapse-1
      %ul.nav.navbar-nav.navbar-right
        %li.active
          %li.main= link_to 'Main Page', root_path
          - if user_signed_in?
            %li.menu= link_to current_user.name, user_path(current_user)
            %li.new-post= link_to 'New Post', new_post_path(current_user)
            %li.signout= link_to 'Sign out', destroy_user_session_path, method: :delete
