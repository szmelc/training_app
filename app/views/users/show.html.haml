            .form-group
              .col-xs-6
                %label{:for => "first_name"}
                  %h4 First name
                %input#first_name.form-control{:name => "first_name", :placeholder => "first name", :title => "enter your first name if any.", :type => "text"}/
            .form-group
              .col-xs-6
                %label{:for => "last_name"}
                  %h4 Last name
