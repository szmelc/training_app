            .form-group
              .col-xs-6
                %label{:for => "email"}
                  %h4 Email
                %input#email.form-control{:name => "email", :placeholder => "you@email.com", :title => "enter your email.", :type => "email"}/
            .form-group
              .col-xs-6
                %label{:for => "email"}
                  %h4 Location
                %input#location.form-control{:placeholder => "somewhere", :title => "enter a location", :type => "email"}/
            .form-group
              .col-xs-6
                %label{:for => "password"}
                  %h4 Password
                %input#password.form-control{:name => "password", :placeholder => "password", :title => "enter your password.", :type => "password"}/
            .form-group
              .col-xs-6
                %label{:for => "password2"}
                  %h4 Verify
                %input#password2.form-control{:name => "password2", :placeholder => "password2", :title => "enter your password2.", :type => "password"}/
            .form-group
              .col-xs-12
                %br/
                %button.btn.btn-lg.btn-success{:type => "submit"}
                  %i.glyphicon.glyphicon-ok-sign
                  Save
                %button.btn.btn-lg{:type => "reset"}
                  %i.glyphicon.glyphicon-repeat
                  Reset
